{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "build"
  },
  "include": ["src/*.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": true
  }
}
