{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "baseUrl": "build",
    "moduleResolution": "Node",
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": ["**/*.test.ts", "**/*.spec.ts"],
  "typeAcquisition": {
    "enable": true
  }
}
